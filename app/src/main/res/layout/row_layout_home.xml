<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prifle_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/cat1" />

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="John Doe"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/action_popup_menu_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_more_horiz_24" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/feed_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/pic1"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/share_imageview"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_baseline_share_24" />


        <ImageView
            android:id="@+id/download_imageview"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"

            android:src="@mipmap/download" />

    </RelativeLayout>

    <TextView
        android:id="@+id/caption_textview"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Caption for the Post" />

</LinearLayout>